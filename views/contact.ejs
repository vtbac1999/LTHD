<script>
  $(document).ready(function () {

    var email;
    var name;
    var message;
    $('#send').click(function () {
      email = $('.email').val();
      name = $('.name').val();
      message = $('.message').val();

      if (name == '') {
        $('.name').focus();
        return false;
      } else if (email == '') {
        $('.email').focus();
        return false;
      } else if (message == '') {
        $('.message').focus();
        return false;
      }
      check(email);
    });
    
    $('#btnmail').click(()=>{
      var m = $('.textsub').text();
      if(m==="Email not exist !!!"){
        $('.email').focus();
        if(m==="Email not exist !!!!"){
        return;
      }
    }else {
        // alert(email);
        // alert(name);
        // alert(message);

        $.ajax({
        url: '/contact',
        method: 'POST',
        contentType: 'application/json',
        data: JSON.stringify({ email: email,name:name,message:message }),
        success: (res) => {
          window.location.href='http://localhost:3000/';
        },
      });

    }
  })

    function check(data) {
      $.ajax({
        url: '/validateemail',
        method: 'POST',
        contentType: 'application/json',
        data: JSON.stringify({ email: data }),
        success: (res) => {
          if (res) {
            $('.textsub').text('Thanks for your contact <3 !!!');
            $('#id01').css({ display: 'block' });
            return true;
          } else {
            $('.textsub').text('Email not exist !!!');
            $('#id01').css({ display: 'block' });
            return false;
          }
        },
      });
    }

  });
</script>

